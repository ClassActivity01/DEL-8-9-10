
@{
    ViewBag.Title = "VerifyAccount";
    Layout = "~/Views/Shared/_Layoutfluid.cshtml";

}

@*<h2>Verify User Account</h2>*@

<body>
    <!--Page Header Title-->
    <header class="page-header">
        <div class="container-fluid">
            <h2 class="no-margin-bottom">Verify User Account</h2>
        </div>
    </header>

    <!--Page Breadcrumb for Active Page navigation-->
    @*<div class="breadcrumb-holder container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="~/Views/Home/Index.cshtml">Home</a></li>
            <li class="breadcrumb-item active">Add New Customer</li>
        </ul>
    </div>*@

    <section class="forms">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">

                        <div class="card-header d-flex align-items-center">
                            <h3 class="h4">Account Verification details</h3>
                        </div>

                        <div class="card-body">


                            @if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
                            {
                                <div class="alert alert-success">
                                    <strong>Success!</strong> Your account has been activated successfully. Click here to @Html.ActionLink("Login", "Login", "UsersAuth")
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-danger">
                                    <strong>Error!</strong> @ViewBag.Message
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>