@section scripts {
    @*<script src="~/Scripts/jqGrid/grid.locale-en.js"></script>
        <script src="~/Scripts/jqGrid/jquery.jqGrid.min.js"></script>*@

    <script>
      jQuery(document).ready(function () {
            debugger;
            jQuery("#jqGridOrder").jqGrid
                ({
                    url: '/SupplierOrder/GetInventory/',
                    datatype: 'json',
                    mtype: 'GET',
                    //table header name
                    colNames: ['Inventory_ID', 'InventoryType_ID', 'Inventory_Name', 'Inventory_Description', 'Inventory_Quantity', 'Minimum_Quantity', 'StockTurn_ID'],
                    //colModel takes the data from controller and binds to grid
                    colModel: [
                        {
                            key: true,
                            hidden: true,
                            name: 'Inventory_ID',2
                            index: 'Inventory_ID',
                            editable: true
                        },

                        {
                            key: false,
                            name: 'InventoryType_ID',
                            index: 'InventoryType_ID',
                            editable: true
                        },

                        {
                            key: false,
                            name: 'Inventory_Name',
                            index: 'Inventory_Name',
                            editable: true
                        },

                        {
                            key: false,
                            name: 'Inventory_Description',
                            index: 'Inventory_Description',
                            editable: true
                        },

                        {
                            key: false,
                            name: 'Inventory_Quantity',
                            index: 'Inventory_Quantity',
                            editable: true
                        },

                        {
                            key: false,
                            name: 'Minimum_Quantity',
                            index: 'Minimum_Quantity',
                            editable: true
                        },

                        {
                            key: false,
                            name: 'StockTurn_ID',
                            index: 'StockTurn_ID',
                            editable: true
                        },

                    ],
                    pager: jQuery('#jqGridPager'),
                    height: '100%',
                    rowNum: 10,
                    viewrecords: true,
                    caption: 'Inventory Order Items',
                    emptyrecords: 'No records',
                    jsonReader:
                    {
                        root: "rows",
                        page: "page",
                        total: "total",
                        records: "records",
                        repeatitems: false,
                        Id: "0"
                    },
                    autowidth: true,
                });
        });
    </script>
}